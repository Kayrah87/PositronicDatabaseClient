# Application Configuration
APP_NAME="Positronic Database Client"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=https://localhost:8098

# Docker Configuration
APP_SERVICE=positronic-app
MYSQL_SERVICE=positronic-mysql
NGINX_SERVICE=positronic-nginx

# Docker Port Configuration
APP_PORT=8098
NGINX_HTTP_PORT=8098
NGINX_HTTPS_PORT=8099
MYSQL_HOST_PORT=3309
MYSQL_CONTAINER_PORT=3306
HORIZON_PORT=8100

# Data Storage Configuration
DATA_STORAGE_PATH=~/.positronic/data

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=positronic-mysql
DB_PORT=3306
DB_DATABASE=positronic_db
DB_USERNAME=positronic_user
DB_PASSWORD=secure_password_here

# MySQL Root Configuration
MYSQL_ROOT_PASSWORD=root_password_here

# Secondary Database Connections
DB_SECONDARY_CONNECTION=pgsql
PGSQL_HOST=localhost
PGSQL_PORT=5432
PGSQL_DATABASE=positronic_pg
PGSQL_USERNAME=postgres
PGSQL_PASSWORD=postgres_password

SQLITE_DATABASE=/app/storage/database.sqlite

SQLSRV_HOST=localhost
SQLSRV_PORT=1433
SQLSRV_DATABASE=positronic_sqlsrv
SQLSRV_USERNAME=sa
SQLSRV_PASSWORD=sqlserver_password

# MongoDB Configuration
MONGO_CONNECTION=mongodb
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=positronic_mongo
MONGO_USERNAME=mongo
MONGO_PASSWORD=mongo_password

# Redis Configuration
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration
CACHE_STORE=redis

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for S3, SQS, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/positronic.crt
SSL_KEY_PATH=/etc/ssl/private/positronic.key

# Horizon Configuration
HORIZON_DOMAIN=localhost:8100
HORIZON_PREFIX=horizon: